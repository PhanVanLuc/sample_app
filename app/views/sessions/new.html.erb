<% provide(:title, t("users.login.title")) %>
<h1><%=t("users.login.title")%></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :email, t("users.form.mail") %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :password, t("users.form.password") %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%=t("users.login.remember")%></span>
        <% end %>
        <%= f.submit t("users.login.title"), class: "btn btn-primary" %>
        <% end %>
        <p><%=t("users.login.newuser")%> <%= link_to t("users.login.signupnow"), signup_path %></p>
    </div>
</div>
